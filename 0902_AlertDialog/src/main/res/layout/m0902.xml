<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:padding="@dimen/pa01"
    tools:context=".M0902">

    <Button
        android:id="@+id/m0902_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textAutoComplete"
        android:text="@string/m0902_b001"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/m0902_b002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margins"
        android:inputType="textAutoComplete"
        android:text="@string/m0902_b002"
        android:textSize="@dimen/fontsize"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/m0902_b001"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/m0902_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Margins"
        android:text="@string/m0902_t001"
        android:textColor="@color/Aqua"
        android:textSize="@dimen/fontsize"
        app:layout_constraintTop_toBottomOf="@+id/m0902_b002"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myname"
        android:textColor="@color/Yellow"
        android:textSize="@dimen/fontsize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>